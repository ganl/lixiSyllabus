<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bcg"
    android:gravity="center_horizontal" >

    <include
        android:id="@+id/include1"
        android:layout_alignParentTop="true"
        layout="@layout/common_head" />

    <TextView
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_bcg"
        android:gravity="center"
        android:text="点击登录以获取课表"
        android:textColor="@color/shalowyellow" />

    <LinearLayout
        android:id="@+id/department"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/include1"
        android:layout_marginTop="68dp"
        android:background="@drawable/transparentpressed"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:gravity="left|center_vertical"
            android:text="学院"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/departmentname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/editor"
            android:gravity="left|center_vertical"
            android:hint="请输入学院名称"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/department"
        android:layout_alignRight="@+id/department"
        android:layout_below="@+id/include1"
        android:layout_marginTop="15dp"
        android:background="@drawable/transparentpressed"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:gravity="left|center_vertical"
            android:text="学校"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/universityname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/editor"
            android:gravity="left|center_vertical"
            android:hint="请输入学校名称"
            android:paddingLeft="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login"
        android:layout_alignRight="@+id/login"
        android:layout_below="@+id/department"
        android:layout_marginTop="22dp"
        android:background="@drawable/bcg_text"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:text="专业"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/majorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:background="@drawable/editor"
                android:hint="请输入专业名称"
                android:paddingLeft="3dp"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:text="年级"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/gradenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:background="@drawable/editor"
                android:hint="比如&quot;2011&quot;（届）"
                android:paddingLeft="3dp"
                android:textColorHint="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:text="班级"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:layout_weight="5"
                android:background="@drawable/editor"
                android:hint="请输入班级名"
                android:paddingLeft="3dp"
                android:textColorHint="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>